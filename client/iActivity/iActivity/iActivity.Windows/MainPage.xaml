<Page
    x:Class="iActivity.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:iActivity"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" RequestedTheme="Light"
    >

    <Grid Background="#FFEEEEEE">
        <Grid>
            <StackPanel Orientation="Vertical" Margin="20">
                <TextBlock Text="请求次数" Foreground="Black"/>
                <TextBlock x:Name="ResultShow"  Foreground="Black"/>
            </StackPanel>
            <Button Width="300" Height="60" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="50" Click="StartRequest"/>
        </Grid>
    </Grid> 
    
    <Page.BottomAppBar>
        <CommandBar >
            <AppBarButton Icon="Play" Label="开始" Click="StartRequest"/>
        </CommandBar>
    </Page.BottomAppBar>
</Page>
